{{ 'section-feature-icons.css' | asset_url | stylesheet_tag }}

<div class="feature-icons-section color-{{ section.settings.color_scheme }}">
  <div class="page-width isolate" 
    style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    ">
    {% if section.settings.subheading != blank or section.settings.heading != blank %}
      <div class="icons-header">
        <h3 class="subheading">{{ section.settings.subheading }}</h3>
        <h1 class="heading">{{ section.settings.heading }}</h1>
      </div>
    {% endif %}
    <div class="feature-icons-container columns--{{ section.settings.mobile_columns }}">
      {%- for block in section.blocks -%}
        <div class="feature-icon-item">
          {%- if block.settings.icon_image -%}
            <!-- Custom icon image uploaded by user -->
            <img
              src="{{ block.settings.icon_image | img_url: '100x100' }}"
              alt="{{ block.settings.title }}"
              class="feature-icon-image"
              style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px;"
            >
          {%- else -%}
            <!-- Fallback to specific default icon for each block -->
            <img
              src="{% case forloop.index %}{% when 1 %}{{ 'transport-icon.svg' | asset_url }}{% when 2 %}{{ 'payment-icon.svg' | asset_url }}{% when 3 %}{{ 'support-icon.svg' | asset_url }}{% when 4 %}{{ 'packaging-icon.svg' | asset_url }}{% else %}{{ 'transport-icon.svg' | asset_url }}{% endcase %}"
              alt="Default icon"
              class="feature-icon-image"
              style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px;"
            >
          {%- endif -%}
          <h3 class="feature-icon-title" style="font-size: {{ section.settings.title_font_size }}px;">
            {{ block.settings.title }}
          </h3>
          <p class="feature-icon-description" style="font-size: {{ section.settings.description_font_size }}px;">
            {{ block.settings.description }}
          </p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Feature Icons",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Top Heading",
      "default": "Our purpose"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why choose Mona Fashion"
    },
    {
      "type": "select",
      "id": "mobile_columns",
      "label": "Number of columns on mobile",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" }
      ],
      "default": "2"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title Font Size",
      "default": 16,
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "description_font_size",
      "label": "Description Font Size",
      "default": 14,
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "default": 50,
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "px"
    },{
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image",
          "info": "If no image is uploaded, a default icon will display."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Icons",
      "category": "Custom",
      "blocks": [{ "type": "feature" }, { "type": "feature" }, { "type": "feature" }, { "type": "feature" }]
    }
  ]
}
{% endschema %}
