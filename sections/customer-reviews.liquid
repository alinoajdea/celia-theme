<link rel="stylesheet" href="{{ 'customer-reviews.css' | asset_url }}">

<section
  class="customer-reviews isolate"
  style="
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container page-width">
    <div class="reviews-header">
      <h3 class="top-heading">{{ section.settings.subheading }}</h3>
      <h2 class="heading h1">{{ section.settings.heading }}</h2>
    </div>
    <div class="reviews-grid">
      {% for block in section.blocks %}
        <div class="review-card">
          <div class="review-top">
            <div class="review-left">
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | img_url: '100x100' }}"
                  alt="{{ block.settings.name }}"
                  class="review-avatar"
                >
              {% else %}
                <img
                  src="{{ 'avatar.svg' | asset_url }}"
                  alt="{{ block.settings.name | escape }}"
                  class="review-avatar"
                >
              {% endif %}
              
            </div>
            <div class="review-right">
              <div class="review-name-stars">
                <h4 class="review-name">{{ block.settings.name }}</h4>
                <div class="review-stars">
                  {% for i in (1..block.settings.rating) %}
                    <span class="star">★</span>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
          <p class="review-text">{{ block.settings.review_text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Happy Shoppers"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Top Heading",
      "default": "Client Reviews"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FDF8F5"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "default": 100,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "default": 100,
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name",
          "default": "John Doe"
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "This is an amazing product! Highly recommend it!"
        },
        {
          "type": "select",
          "id": "rating",
          "label": "Rating",
          "options": [
            { "value": "5", "label": "★★★★★" },
            { "value": "4", "label": "★★★★☆" },
            { "value": "3", "label": "★★★☆☆" },
            { "value": "2", "label": "★★☆☆☆" },
            { "value": "1", "label": "★☆☆☆☆" }
          ],
          "default": "5"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews",
      "category": "Custom",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}
